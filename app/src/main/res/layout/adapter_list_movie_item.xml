<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="@dimen/item_list_frame_min_width"
    android:minHeight="@dimen/item_list_list_frame_min_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/movie_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minWidth="@dimen/item_list_frame_min_width"
      android:minHeight="@dimen/item_list_list_frame_min_height"
      android:adjustViewBounds="true"
      />

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:backgroundTint="@color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparent"
        android:minHeight="@dimen/item_list_min_height_layout"
        android:textAlignment="center"
        android:padding="@dimen/item_list_layout_padding"
        >
      <TextView
          android:id="@+id/movie_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:textColor="@android:color/white"
          android:textSize="@dimen/item_list_text_size"
          android:textStyle="bold"
          android:text="@string/app_name"
          />

    </RelativeLayout>

  </RelativeLayout>

</FrameLayout>